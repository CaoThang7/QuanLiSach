<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/khoantc_item"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@android:color/darker_gray"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvTieuDe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="#9FF4A3"
            android:gravity="center"
            android:text="Tổng hôm nay"
            android:textColor="#77724C"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvtkdate"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/tvTieuDe"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:text="..." />
        <!--        <ImageView-->
        <!--            android:id="@+id/btnDel"-->
        <!--            android:layout_width="48dp"-->
        <!--            android:layout_height="48dp"-->
        <!--            android:layout_below="@+id/tvNgay"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_marginStart="8dp"-->
        <!--            android:layout_marginTop="7dp"-->
        <!--            android:layout_marginEnd="8dp"-->
        <!--            android:layout_marginRight="54dp"-->
        <!--            android:layout_marginBottom="8dp"-->
        <!--            android:src="@drawable/ic_delete" />-->



        <TextView
            android:id="@+id/tvTieuDe2"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_margin="8dp"
            android:background="#9FF4A3"
            android:gravity="center"
            android:layout_below="@+id/tvtkdate"
            android:text="Tổng tháng này"
            android:textColor="#77724C"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvtkmonth"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_below="@+id/tvTieuDe2"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:gravity="left|center_vertical"
            android:text="..." />

        <TextView
            android:id="@+id/tvTieuDe3"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_margin="8dp"
            android:background="#9FF4A3"
            android:gravity="center"
            android:layout_below="@+id/tvtkmonth"
            android:text="Tổng năm này"
            android:textColor="#77724C"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvtkyear"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="20dp"
            android:layout_below="@+id/tvTieuDe3"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:gravity="left|center_vertical"
            android:text="..." />





        <TextView
            android:id="@+id/ktcSeparate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvtkyear"
            android:layout_margin="8dp"
            android:background="@android:color/black" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>