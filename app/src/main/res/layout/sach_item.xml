<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/thang"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@android:color/holo_orange_dark"
    android:padding="8dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="201dp"
        android:layout_margin="8dp"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/tvTieuDee"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="#800000"
            android:gravity="center"
            android:text="BOOK"
            android:textColor="#FDE000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tvTieuDe"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/book2" />

        <TextView
            android:id="@+id/masach"
            android:layout_width="186dp"
            android:layout_height="42dp"
            android:layout_below="@+id/tvTieuDe"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="4dp"
            android:text="ma sach"
            android:textColor="#F40505"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/matl_FK"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvTieuDe"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="121dp"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="4dp"
            android:text="Ma the loai"
            android:textColor="#F40505"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/gia"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="121dp"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="4dp"
            android:gravity="left|center_vertical"
            android:text="Gia: $"
            android:textColor="#21D128"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ass"
            android:layout_width="186dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="121dp"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="162dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="4dp"
            android:gravity="left|center_vertical"
            android:text="assignment"
            android:textColor="#21D128"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/btnDel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_delete" />


        <TextView
            android:id="@+id/ktcSeparate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btnDel"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/black" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>